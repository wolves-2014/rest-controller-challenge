<div class="container">
  <h1>Edit contact</h1>
  <form action="/contacts/<%= @contact.id %>/addresses/<%= @address.id %>" method="POST">
    <input type="hidden" name = "_method" value = "DELETE">
    <input type="submit" value="DELETE" />
  </form>
  <form action="/contacts/<%= @contact.id %>/addresses/<%= @address.id %>" method="POST">
    <input type="hidden" name = "_method" value = "PUT"/>
    <%= erb :"addresses/_form", locals: { contact: @contact, address: @address } %>
  </form>
</div>
