<div class="container">
  <h1>Edit address</h1>
  <form action="/contacts/<%= @contact.id %>/addresses/<%= @address.id %>" method="POST">
    <input type="submit" value="DELETE" />
    <input type="hidden" name="_method" value="DELETE" />
  </form>
  <form action="/contacts/<%= @contact.id %>/addresses/<%= @address.id %>" method="POST">
    <input type="hidden" name="_method" value="PUT" />
    <%= erb :"addresses/_form", locals: { contact: @contact, address: @address } %>
  </form>
</div>
